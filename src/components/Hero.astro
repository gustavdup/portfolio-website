---
import { getEntryBySlug } from 'astro:content';
const bio = await getEntryBySlug('bio', 'bio');
---

<header class="flex items-start gap-6 mt-8">
  <div class="relative w-14 h-14 rounded-full overflow-hidden flex-shrink-0 border border-zinc-200 dark:border-zinc-800" style="aspect-ratio: 1 / 1;">
    <img src="/profile.jpg" alt="Gustav du Plessis" class="w-full h-full object-cover" />
  </div>
  <div class="flex-1">
    <div class="space-y-2">
      <h1 class="text-base text-zinc-900 dark:text-zinc-100 font-medium">
        Hey, I'm {bio?.data.title}.
        <span class="font-normal text-zinc-600 dark:text-zinc-400">
          {bio?.data.description}
          {bio?.data.location && (
            <> <span class="mx-1">Â·</span>{bio.data.location}</>
          )}
          {bio?.data.email && (
            <a href={`mailto:${bio.data.email}`} class="group inline-flex items-center ml-2">
              <span class="font-medium relative text-zinc-900 dark:text-zinc-100 transition-all duration-300 ease-in-out after:content-[''] after:absolute after:w-full after:h-[1px] after:bottom-0 after:left-0 after:bg-zinc-400 dark:after:bg-zinc-600 hover:after:bg-zinc-900 dark:hover:after:bg-zinc-100 after:transition-all after:duration-300">Say hello</span>
              <span class="ml-1 text-zinc-900 dark:text-zinc-100 opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all duration-300">
                <svg stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" class="w-3.5 h-3.5" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
              </span>
            </a>
          )}
        </span>
      </h1>
    </div>
  </div>
</header>
