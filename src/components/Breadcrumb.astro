---
export interface Props {
  items: Array<{
    name: string;
    href?: string;
  }>;
}

const { items } = Astro.props;
---

<nav class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400 mb-6">
  {items.map((item, index) => (
    <div class="flex items-center">
      {index > 0 && (
        <svg class="w-4 h-4 mx-2 text-gray-400 dark:text-gray-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      )}
      {item.href ? (
        <a 
          href={item.href} 
          class="hover:text-primary transition-colors duration-200 font-medium"
        >
          {item.name}
        </a>
      ) : (
        <span class="text-text-light dark:text-text-dark font-medium">
          {item.name}
        </span>
      )}
    </div>
  ))}
</nav>
