---
import { getCollection } from 'astro:content';
const projects = await getCollection('projects');
---

<section class="mt-12">
  <div class="flex items-center gap-4 mb-6">
    <h2 class="text-sm font-medium tracking-wider uppercase text-zinc-600 dark:text-zinc-400">Projects</h2>
    <div class="flex-1 h-[1px] bg-zinc-200 dark:bg-zinc-800"></div>
  </div>
  <ul class="space-y-4">
    {projects.map(project => (
      <li key={project.id} class="py-5 px-6 rounded-xl bg-zinc-50 dark:bg-zinc-900/30 border border-zinc-200 dark:border-zinc-800 transition-all duration-200 hover:bg-zinc-100 dark:hover:bg-zinc-900/50">
        <div class="flex items-center justify-between mb-1">
          <h3 class="font-medium text-base text-zinc-900 dark:text-zinc-100">{project.data.title}</h3>
          <span class="text-xs text-zinc-500 dark:text-zinc-400">{project.data.date}</span>
        </div>
        <p class="text-sm text-zinc-700 dark:text-zinc-300 mb-2">{project.data.summary}</p>
        <div class="flex flex-wrap gap-2">
          {project.data.tech?.map(tech => (
            <span class="inline-block bg-zinc-200 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 text-xs px-2 py-1 rounded border border-zinc-300 dark:border-zinc-700">{tech}</span>
          ))}
        </div>
      </li>
    ))}
  </ul>
</section>
