---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Gustav du Plessis - Portfolio</title>
    <script is:inline>
      // Prevent flash of unstyled content (FOUC) for dark mode
      // Dark mode is the default
      (function() {
        const theme = localStorage.getItem('theme');
        if (theme === 'light') {
          // Only use light mode if explicitly set
          document.documentElement.classList.remove('dark');
        } else {
          // Default to dark mode (including first visit)
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="bg-white dark:bg-zinc-950 min-h-screen font-sans text-zinc-900 dark:text-zinc-100 flex flex-col transition-colors duration-300 ease-in-out">
    <div class="relative min-h-screen overflow-x-hidden">
      <div class="max-w-4xl mx-auto p-4 sm:p-6 lg:p-8 flex flex-col min-h-screen transition-colors duration-300 ease-in-out font-sans tracking-normal">
        <div class="flex justify-center mb-8">
          <Navbar currentPath={Astro.url.pathname} />
        </div>
        <div class="flex-1">
          <slot />
        </div>
        <div class="mt-auto pt-16">
          <Footer />
        </div>
      </div>
    </div>
  </body>
</html>
