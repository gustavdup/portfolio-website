---
import Layout from '../layouts/Layout.astro';
import ProjectsList from '../components/ProjectsList.astro';
import { getEntryBySlug } from 'astro:content';

// Get bio data to check visibility settings
const bio = await getEntryBySlug('bio', 'bio');
const showProjects = bio?.data.showProjects ?? true;
---

<Layout title="Portfolio | Gustav du Plessis" description="Browse my portfolio of product management, development, and UX projects">
  {showProjects ? (
    <ProjectsList />
  ) : (
    <div class="max-w-4xl mx-auto mt-8 px-4">
      <div class="text-center py-16">
        <div class="mb-8">
          <svg class="w-24 h-24 mx-auto text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <h1 class="text-2xl md:text-3xl font-medium text-text-light dark:text-text-dark mb-4">Portfolio Coming Soon</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
          I'm currently curating a selection of my best product management, development, and UX projects to showcase here. 
          This section will feature detailed case studies and project highlights.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/" class="inline-flex items-center px-6 py-3 rounded-lg bg-primary text-white hover:bg-primary-600 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
            </svg>
            Back to About
          </a>
          <a href="/lets-work-together" class="inline-flex items-center px-6 py-3 rounded-lg border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
            Let's Work Together
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  )}
</Layout>
